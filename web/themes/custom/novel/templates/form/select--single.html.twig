{% set selected_option = options|first %}

<div class="dropdown">
  <select{{ attributes.addClass('dropdown__select') }}>
    {% for option in options %}
      {% if option.type == 'optgroup' %}
        <optgroup label="{{ option.label }}">
          {% for sub_option in option.options %}
            <option class="dropdown__option" value="{{ sub_option.value }}"{{ sub_option.selected ? ' selected="selected"' }}>{{ sub_option.label }}</option>
          {% endfor %}
        </optgroup>
      {% elseif option.type == 'option' %}
        <option class="dropdown__option" value="{{ option.value }}" {{ option.selected ? ' selected="selected"' }}>{{ option.label }}</option>
      {% endif %}
    {% endfor %}
  </select>
  <div class="dropdown__arrows">
    <img class="dropdown__arrow" src="{{ baseIconPath }}/collection/ExpandMore.svg" alt="" />
  </div>
</div>
