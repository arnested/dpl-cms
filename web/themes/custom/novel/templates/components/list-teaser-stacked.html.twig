<a href="{{ url }}" class="content-list-item-stacked arrow__hover--right-small">
  <h3 class="hide-visually">{{ title }}</h3>

  {% if date or start_time %}
    <time class="content-list-item-stacked__content" datetime="{{ datetime_attribute }}">
      <span class="content-list-item-stacked__date">{{ date }}</span>
      <span class="content-list-item-stacked__time">{{ start_time }} - {{ end_time }}</span>
    </time>
  {% endif %}

  {{ source(baseIconPath ~ '/arrow-ui/icon-arrow-ui-small-right.svg') }}
</a>
