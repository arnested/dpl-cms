{%
  set classes = [
  'hero',
  media ? '' : 'hero--has-no-media'
]
%}

{% if url %}
	<a href={{url}} {{ attributes.addClass(classes) }}>
		<div class="hero__content arrow arrow__hover--right-large">
			{% include "@novel/components/hero-inner.html.twig" with {'arrow': true} %}

		</div>


		<div class="hero__visual">
			<div class="hero__visual-inner">
				{{ media }}
			</div>
		</div>
	</a>

{% else %}
	<section {{ attributes.addClass(classes) }}>
		<div class="hero__content">
			{% include "@novel/components/hero-inner.html.twig" %}
		</div>


		<div class="hero__visual">
			<div class="hero__visual-inner">
				{{ media }}
			</div>
		</div>
	</section>
{% endif %}
