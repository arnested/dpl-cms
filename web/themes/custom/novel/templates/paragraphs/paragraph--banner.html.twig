<a href="{{ content.field_banner_link[0]['#url'] }}" class="banner">
  {% if content.field_banner_image %}
    <div class="banner__media-wrapper">
      {% include '@novel/components/media-container.html.twig'
        with {
        attributes: create_attribute(),
        media: content.field_banner_image,
        has_media: content.field_banner_image,
      } only %}
    </div>
  {% endif %}
  <div class="banner__content-wrapper {{ content.field_banner_image[0] ? '' : 'banner__content-wrapper--no-image' }}">
    <div class="banner__content arrow__hover--right-large {{ content.field_banner_image[0] ? '' : 'banner__content--no-image' }}">
      <h2 class="banner__title">
        {{ content.field_underlined_title|render|striptags('<u>')|raw }}
      </h2>
      {% if content.field_banner_description %}
        <p class="banner__description">
          {{ content.field_banner_description }}
        </p>
      {% endif %}
      {{ source(baseIconPath ~ '/arrow-ui/icon-arrow-ui-large-right.svg') }}
    </div>
  </div>
</a>
