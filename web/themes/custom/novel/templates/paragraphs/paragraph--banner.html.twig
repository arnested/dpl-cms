{%
  set bannerContentClasses = [
  'banner-content arrow__hover--right-large',
  content.field_banner_image.0 ? '' : 'banner-content--no-image'
]
%}

<a href="{{ content.field_banner_link.0["#title"] }}" class="banner ">
    {% if content.field_banner_image %}
        <div class="banner-visual">
            {{ content.field_banner_image }}
        </div>
    {% endif %}
    <div class="banner__spacing">
      <div {{ attributes.addClass(bannerContentClasses) }}>
          <h2 class="banner-content__title">
              {{ content.field_underlined_title|render|striptags('<u>')|raw }}
          </h2>
          <p class="banner-content__description">
              {{ content.field_banner_description }}
          </p>
          {{ source(baseIconPath ~ '/arrow-ui/icon-arrow-ui-large-right.svg') }}
      </div>
    </div>
</a>
