{% for link in links %}
  <a href="{{ link.href }}" target="{{ link.target }}" rel="{{ link.target == '_blank' ? 'noopener noreferrer' : '' }}"
     class="link-with-icon text-body-medium-regular arrow__hover--right-small">
    <div class="link-icon bg-identity-primary {{ link.linkIconClass }}">
      <img class="invert" src="/{{ baseIconPath }}/{{ link.folder }}/{{ link.icon }}.svg" alt="" />
    </div>
    {{ link.linkText }}
    {{ source( baseIconPath ~'/arrow-ui/icon-arrow-ui-large-right.svg') }}
  </a>
{% endfor %}
