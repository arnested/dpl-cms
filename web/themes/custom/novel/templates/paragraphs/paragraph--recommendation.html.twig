{% set application = react_app['#name'] %}

{% if application == 'recommended-material' %}
  <div class="recommendation {{ react_app['#positon_image_right'] ? 'recommendation--reversed"' : '' }}" >
    {{ react_app }}
    <a href="{{ react_app['#material_url'] }}" class="recommendation__texts arrow__hover--right-small">
      <h3 class="recommendation__title">{{ content.field_recommendation_title }}</h3>
      <p class="recommendation__description">
        {{ content.field_recommendation_description }}
      </p>
      {{ source(directory ~ '/assets/dpl-design-system/icons/arrow-ui/icon-arrow-ui-small-right.svg') }}
    </a>
  </div>
{% elseif application == 'recommendation' %}
  {{ react_app }}
{% endif %}
