{% set dates = node.get('field_event_date').getValue() %}

{% set description_items = [
  {
    label: "Time"|trans,
    value: dates.0 ? dates.0.value|date('H:i') ~ ' - ' ~ dates.0.end_value|date('H:i') : null
  },
  {
    label: "Price"|trans,
    value: content.field_ticket_categories.0 ? content.field_ticket_categories : null
  },
  {
    label: "Place"|trans,
    value: content.field_event_place.0 ? content.field_event_place : null
  },
  {
    label: "Partners"|trans,
    value: content.field_event_partners.0 ? content.field_event_partners : null
  },
  {
    label: "Address"|trans,
    value: content.field_event_address.0 ? content.field_event_address : null
  }
] %}

{% include '@novel/layout/full-event.html.twig' with {
  'label': label,
  'image': content.field_event_image,
  'event_link': content.field_event_link,
  'paragraphs': content.field_event_paragraphs,
  'date': content.field_event_date,
  'description': content.field_event_description,
  'description_items': description_items,
  'categories': content.field_categories,
} only %}
